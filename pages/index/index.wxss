/**index.wxss**/

.container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0 5%;
}

.container1 {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0 20rpx;
}

/* 用户 */

.user-wrapper {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 10px 0;
}

/* 用户信息 */

.user-info {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 25rpx;
}

.userinfo-avatar {
    width: 60rpx;
    height: 60rpx;
    margin: 0 10rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #000;
}

/* 用户等级 金币 */

.user-acount {
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
}

.grade {
    width: 120rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    border: 1px solid #93c5e5;
    color: #93c5e5;
    border-radius: 30rpx;
    font-size: 25rpx;
}

.gold-coin {
    margin-left: 20rpx;
    line-height: 40rpx;
}

.gold-coin image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.gold-coin text {
    color: #f4ea2a;
}

/* 轮播 */

swiper {
    width: 100%;
    margin: 20rpx 0;
}

swiper-item {
    border-radius: 20rpx;
    position: relative;
    height: 100%;
}

.banner-image {
    width: 100%;
}

swiper-item text {
    display: inline-block;
    width: 100%;
    background: rgba(51, 51, 51, .7);
    color: #fff;
    position: absolute;
    bottom: 0;
    left: 0;
    text-align: right;
    padding-right: 20rpx;
    box-sizing: border-box;
}

/* 游戏列表 */

/* 标题 */

.title {
    font-weight: bold;
    letter-spacing: 5rpx;
    font-size: 40rpx;
    padding: 20rpx 0;
}

/* 游戏列表 */

.game-list {
    display: flex;
    flex-direction: column;
}

.game-item {
    display: flex;
    flex-direction: row;
    margin-bottom: 30rpx;
}

/* 游戏图标 */

.game-icon {
    width: 150rpx;
    height: 150rpx;
    border: 1px solid #eee;
    border-radius: 20rpx;
    margin-right: 30rpx;
}

/* 游戏简介 */

.game-info-container {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    border-bottom: 1px solid #eee;
    align-items: center;
}

.game-info {
    display: flex;
    flex-direction: column;
    width: 354rpx;
}

.game-info text {
    display: block;
}

.game-name {
    font-size: 36rpx;
    margin-bottom: 15rpx;
}

.game-desc {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 25rpx;
    margin-bottom: 10rpx;
    color: #666;
}

.game-member {
    font-size: 20rpx;
    color: #666;
}

.open-btn {
    width: 120rpx;
    height: 50rpx;
    border-radius: 25rpx;
    background: #93c5e5;
    color: #fff;
    line-height: 50rpx;
    text-align: center;
    font-size: 32rpx;
    margin-left: 20rpx;
}

.image-item {
    margin-bottom: 10rpx;
    padding: 10rpx;
    border: 1px solid red;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.image-item text {
    color: blueviolet;
    font-size: 40rpx;
    display: inline-block;
    text-align: center;
    margin-bottom: 10rpx;
}

.image-item image {
    width: 100%;
    /* height: 375rpx; */
}
